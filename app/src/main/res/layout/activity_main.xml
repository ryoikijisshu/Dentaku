<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintVertical_bias="0.499"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num8"
            app:layout_constraintStart_toEndOf="@+id/num7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/num7"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num9"
            app:layout_constraintStart_toEndOf="@+id/num8"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/num8"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num7"
            app:layout_constraintStart_toStartOf="@+id/num7"
    />
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num5"
            app:layout_constraintStart_toEndOf="@+id/num4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num8"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num9" app:layout_constraintStart_toEndOf="@+id/num5"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num4"
            app:layout_constraintStart_toStartOf="@+id/num4"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num5" app:layout_constraintStart_toEndOf="@+id/num1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num6" app:layout_constraintStart_toEndOf="@+id/num2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_c"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num2" app:layout_constraintStart_toEndOf="@+id/num0"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num1"
            app:layout_constraintStart_toStartOf="@+id/num1"
    />
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_eq" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num3" app:layout_constraintStart_toEndOf="@+id/func_c"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_div" app:layout_constraintStart_toEndOf="@+id/num9" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/num9"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_mul" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/func_div" app:layout_constraintStart_toEndOf="@+id/num6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_min"
            app:layout_constraintStart_toEndOf="@+id/num3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/func_mul"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/func_pls" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/func_min" app:layout_constraintStart_toEndOf="@+id/func_eq"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="320dp"
            android:layout_height="71dp"
            android:id="@+id/result"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/num7"
            android:layout_marginTop="117dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp"
            android:textColor="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintVertical_bias="0.326"/>
    <Button
            android:text="2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/button1"/>
    <Button
            android:text="3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button1" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="+"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/button1" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button5" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="@+id/button1"
    />
    <Button
            android:text="5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button7" app:layout_constraintStart_toEndOf="@+id/button6" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <Button
            android:text="-"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button7" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"/>
    <Button
            android:text="7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button9" app:layout_constraintStart_toStartOf="@+id/button5"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button10" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <Button
            android:text="9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button11" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="*"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button12" app:layout_constraintStart_toEndOf="@+id/button11"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button8"/>
    <Button
            android:text="0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button13" app:layout_constraintStart_toStartOf="@+id/button9"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"/>
    <Button
            android:text="="
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button14" app:layout_constraintStart_toEndOf="@+id/button13"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button10"/>
    <Button
            android:text="C"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button15" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button11" app:layout_constraintStart_toEndOf="@+id/button14"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="/"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button16" app:layout_constraintStart_toEndOf="@+id/button15"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button12"/>
</android.support.constraint.ConstraintLayout>